{
    "name": "puli/composer-plugin",
    "type": "composer-plugin",
    "description": "Integrates Composer into the Puli package manager.",
    "homepage": "http://puli.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "composer-plugin-api": "^1.0",
        "symfony/process": "^2.3",
        "puli/repository": "^1.0-beta8",
        "puli/discovery": "^1.0-beta8",
        "puli/url-generator": "^1.0-beta3",
        "webmozart/key-value-store": "^1.0-beta6",
        "webmozart/path-util": "^2.2.3",
        "webmozart/assert": "^1.0"
    },
    "require-dev": {
        "composer/composer": "^1.0-alpha10",
        "symfony/filesystem": "^2.3",
        "phpunit/phpunit": "^4.6",
        "webmozart/glob": "^3.1",
        "sebastian/version": "^1.0.1"
    },
    "minimum-stability": "beta",
    "autoload": {
        "psr-4": {
            "Puli\\ComposerPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\ComposerPlugin\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "class": "Puli\\ComposerPlugin\\PuliPlugin"
    },
    "support": {
        "issues": "https://github.com/puli/issues/issues"
    }
}
