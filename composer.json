{
    "name": "webmozart/composer-puli-plugin",
    "type": "composer-plugin",
    "description": "A resource location plugin for Composer based on the Puli library.",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "composer-plugin-api": "1.0.0",
        "webmozart/puli": "~1.0@alpha"
    },
    "require-dev": {
        "composer/composer": "~1.0@alpha"
    },
    "autoload": {
        "psr-4": {
            "Webmozart\\Composer\\PuliPlugin\\": "src/"
        }
    },
    "extra": {
        "class": "Webmozart\\Composer\\PuliPlugin\\PuliPlugin"
    }
}
