{
    "name": "puli/composer-plugin",
    "type": "composer-plugin",
    "description": "Integrates Composer into the Puli package manager.",
    "license": "MIT",
    "authors": [
        {
            "name": "Bernhard Schussek",
            "email": "bschussek@gmail.com"
        }
    ],
    "require": {
        "composer-plugin-api": "1.0.0",
        "puli/repository": "~1.0",
        "puli/repository-manager": "~1.0",
        "webmozart/json": "~1.0",
        "webmozart/path-util": "~1.0"
    },
    "require-dev": {
        "composer/composer": "~1.0@dev",
        "symfony/filesystem": "~2.3"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "Puli\\Extension\\Composer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Puli\\Extension\\Composer\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "class": "Puli\\Extension\\Composer\\PuliPlugin"
    }
}
